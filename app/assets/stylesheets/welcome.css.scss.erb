/*====================
CSS Variables
====================*/

/*Screen Sizes*/
$screen-lg-min: 940px;
$screen-md-min: 720px;
$screen-sm-min: 576px;
$screen-xs-min: 0px;

/*Colors and Backgrounds*/
$outside-background: #bfbfbf;
$outside-text: black;
$outside-border: 1px solid black;
$subheader-color: #b3b3b3;
$URL-color: #99ccff;

/*Fonts*/
$navigation-font: sans-serif;


/*====================
Website Consistent Styling
====================*/

/*Container Styling*/
div.container {
  width: 100%;
  margin-left: auto;
  margin-right: auto;
  padding-left: 0px;
  padding-right: 0px;
}

h2.subheader {
  margin-bottom: 20px;
  color: $subheader-color;
}

/*Navbar*/
nav.navbar {
  margin-bottom: 0px;
  background-color: $outside-background;
  border: $outside-border;
}

div.navbar-header {
  font-family: $navigation-font;
  a.navbar-brand {
    color: $outside-text;
  }
}

ul.nav.navbar-nav {
  font-family: $navigation-font;
}


/*Body*/
body {
  background-color: black;
  color: white;
  font-family: monospace;
  font-size: 16px;
}

/*Jumbotron*/
.jumbotron {
  /*background: url("baby-sm.jpg");*/
  /*background: url('baby-sm.jpg');*/
  background-image: url(<%= asset_path('baby-sm.jpg') %>);
  background-repeat: no-repeat;
  background-size: 100%;
  height: 30em;
  margin-bottom: 0px;
}

.btn-outline-primary {
  border: 1px solid black;
}

/*About Page*/
div#about.container {
  /*text-align: center;*/
  max-width: 35em;
  height: 30em;

  h2 {
    text-align: center;
  }

  p {
    margin-left: auto;
    margin-right: auto;
  }
    a {
      color: $URL-color;
    }
}


/*Contact Page*/
div#contact {
  text-align: center;
}

div#contact.container p a {
  color: $URL-color;
}


/*Photos Page*/
div#photos {
  text-align: center;
}

div#item {
  font-size: 10px;
}

/* > is the child combinator, sometimes mistakenly called 
the direct descendant combinator.That means the selector 
v > p.some_class only selects paragraphs of .some_class 
at are nested directly inside a div, and not any 
paragraphs that are nested further within.*/
.carousel-inner > .item > img {
    margin: 0 auto;
}

div.carousel-caption {
  background-color: black;
  font-size: 14px;
  font-family: monospace;
  padding-top: 10px;
}


/*Websites Page*/
div#websites {
  text-align: center;
}

picture.website-photos img {
  width: 60%;
  margin-bottom: 15px;
}

div.website-info {
  margin-left: 5em;
  margin-right: 5em;
  text-align: left;
}


/*Footer*/
footer {
  background-color: $outside-background;
  border: $outside-border;
  color: $outside-text;
  text-align: center;
  padding: 15px;
  margin-left: auto;
  margin-right: auto;
}


/*====================
Screen Size Specific Styling
====================*/

/* Small devices (tablets, 576px and up) */
@media (min-width: $screen-xs-min) {

  /*Device-Wide Styling*/
  div.container {
    width: 100%;
  }

  /*Index Page*/
  div#index-caption.carousel-caption {
    font-size: 1em;
  }

  /*Websites Page*/
  h2.subheader {
    font-size: 2em;
  }
}

/* Small devices (tablets, 576px and up) */
/*@media (min-width: $screen-sm-min) {

  div.container {
    width: 100%;
  }
}*/

/* Medium devices (desktops, 720px and up) */
@media (min-width: $screen-md-min) {
  /*Container Styling*/
  div.container {
    width: 100%;
  }
}

/* Large devices (large desktops, 940px and up) */
@media (min-width: $screen-lg-min) {

  div.website-info {
    margin-left: 2em;
    margin-right: 2em;
  }
}
