/*====================
CSS Variables
====================*/

/*Screen Sizes*/
$screen-lg-min: 940px;
$screen-md-min: 720px;
$screen-sm-min: 576px;
$screen-xs-min: 350px;


/* Very Small Devices (iPhone 5, width less than 576px) */
@media (max-width: $screen-xs-min) {

	/*Jumbotron*/
	.jumbotron {
	  height: 11em;
	}

	/* Small devices (tablets, 576px and up) */
@media (min-width: $screen-xs-min) {

  /*Device-Wide Styling*/
  div.container {
    width: 100%;
  }

  /*Index Page*/
  div#index-caption.carousel-caption {
    font-size: 1em;
  }

  /*Websites Page*/
  h2.subheader {
    font-size: 2em;
  }
}


}