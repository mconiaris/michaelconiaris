/*====================
CSS Variables
====================*/

/*Screen Sizes*/
$screen-xs-min: 0px;


/* Very Small Devices (iPhone 5, width less than 576px) */
@media (min-width: $screen-xs-min) {

	/*Jumbotron*/
	.jumbotron {
	  height: 11em;
	}

	/*Button Settings*/
	.btn {
		font-size: 13px;
		padding: 0.15em 0.5em;
	}
}