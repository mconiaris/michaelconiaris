$screen-sm-min: 576px;

/* Small devices (tablets, 576px and up) */
@media (max-width: $screen-sm-min) {

  div.container {
    width: 100%;
  }

  /*Jumbotron*/
  .jumbotron {
    height: 13em;
  }

  /*Button Settings*/
  .btn {
  	font-size: 13px;
  	padding: 0.15em 0.5em;
  	color: lightblue;
  	background-color: black;
  }
}